body
    .container
        .page-header
            h3 Files
        include player
        table.table.table-condensed.table-hover
            thead
                th(width='35')
                th.text-primary Name
                th.text-primary.text-center(width='89') Dim
                th.text-primary.text-center Last modified
            tbody
        h3 URL
        .row
            .col-sm-11
                input.form-control(name='url', type='text', value='')
            .col-sm-1
                button#loadurl.btn.btn-primary.form-control(type='button') Load
    // /.container
    script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
    script(src='js/bootstrap.min.js')
    script(src='js/application.js')
