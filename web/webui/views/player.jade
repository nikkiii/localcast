#player(style='display: none;')
    .row
        .col-sm-6.col-sm-offset-3
            h4#ctitle.text-center Unknown
    .row
        .col-sm-5.col-sm-offset-3
            #playback-slider.progress.slider
                #playback-progress.progress-bar(role='progressbar', aria-valuenow='0', aria-valuemin='0', aria-valuemax='100', style='width: 0%;')
                    span.sr-only 0%
        .col-sm-1
            span#ctime 0:00
            | /
            span#ttime
    .row
        .col-sm-2.col-sm-offset-3
            a#playpause(href='#')
                i.fa.fa-play
            | &nbsp;
            a#stop(href='#')
                i.fa.fa-stop
            | &nbsp;
            a#mute(href='#')
                i.fa.fa-volume-up
        .col-sm-2.col-sm-offset-2
            #volume.progress.slider
                .progress-bar(role='progressbar', aria-valuenow='100', aria-valuemin='0', aria-valuemax='100', style='width: 100%;')
                    span.sr-only 100%